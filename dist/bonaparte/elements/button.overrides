.ui.mini.compact.button,
.ui.mini.button,
button.ui.tiny,
button.ui.tiny.compact,
.ui.tiny.buttons .button, 
.ui.tiny.compact.button,
.ui.tiny.button {
  line-height:@h6Lineheight;
  padding:0.25rem 1rem;
  min-width:2rem;  
  min-height:2rem;

  > .icon {/*
    width:2rem;*/
  }  
}

.ui.labeled.icon.mini.buttons .button,
.ui.labeled.icon.buttons .mini.button,
.ui.labeled.icon.mini.buttons button,
.ui.labeled.icon.mini.button,
.ui.labeled.icon.tiny.buttons .button,
.ui.labeled.icon.buttons .tiny.button,
.ui.labeled.icon.tiny.buttons button,
.ui.labeled.icon.tiny.button  {
  padding-left:3rem !important;

  > .icon {
    width:2rem;
  }
}
