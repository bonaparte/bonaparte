/*******************************
         Theme Overrides
*******************************/



button.ui,
.ui.buttons,
.ui.compact.button,
.ui.button {
  position:relative;
  font-size:@fontSize;
  line-height:@lineHeight;
 /* border:0px;
  outline:0px;
  overflow:hidden;*/
  min-width:4rem;  
  min-height:4rem;  
  box-shadow: 0px 0px 0px 0px rgba(34, 36, 38, 0.15), 0px 1px 2px 0 rgba(34, 36, 38, 0.15);
  margin-top:0.5rem;
  vertical-align: middle; /* "baseline" does not align with line grid */  

  > .icon {
    height:auto;
    /*width:@lineHeight - 2rem;*/
    margin:0 1rem 0 0;
  }  
  > .icon.right {
    margin:0 0 0 1rem;
  }
}


/*STANDARD*/

button.ui,
button.ui.compact,
.ui.buttons .button,
.ui.compact.button,
.ui.button {
  padding:1.0833333rem 1rem 0.9188888rem 1rem;
}

.ui.labeled.icon.buttons .button,
.ui.labeled.icon.buttons button,
.ui.labeled.icon.button {
  padding-left:5rem !important;

  > .icon {

  }
}

/*.ui.buttons .or {
  

}*/


